div(ng-controller='recipeEditCtrl')
    .row.margin-top-20
    .row.col-sm-offset-1
        form#recipeEdit.form-horizontal(novalidate)
            .form-group
                .row
                    .col-md-6
                        label(for='recipeName') Title
                        input#recipeName.form-control.input-sm(type='text', ng-model='recipeData.title', value='{{recipeData.title}}', required, maxlength="50")
            .form-group
                .row
                    .col-md-6
                        label(for='recipeCategory') Category
                        .group-elements
                            input#recipeCategory.form-control.input-sm.backgroud-white(type='text', value='{{recipeData.categories}}', required, readonly)
                            span.input-group-addon.input-sm(ng-click='openCategory()', style='width: 45px !important;')
                                i.fa.fa-ellipsis-h
            .form-group
                .row
                    .col-md-6
                        label(for='recipeDescription') Description
                        textarea#recipeDescription.form-control.lk-textarea.input-sm(rows='4', cols='50', ng-model='recipeData.description', value='{{recipeData.description}}', required)
            .form-group
                .row
                    .col-md-3
                        label(for='preperationTime') Preperation Time
                        .row
                            .col-md-6
                                input#preperationTime.form-control.input-sm(type='text', ng-model='recipeData.prepTime', value='{{recipeData.prepTime}}')
                            .col-md-6
                                select#prepTimeUnits.form-control.input-sm(ng-model='recipeData.prepTimeUnits', ng-options='choice as choice for choice in timeChoices', ng-change='fireChange()')
                                    option(value='')
                    .col-md-3
                        label(for='cookTime') Cook Time
                        .row
                            .col-md-6
                                input#cookTime.form-control.input-sm(type='text', ng-model='recipeData.cookTime', value='{{recipeData.cookTime}}')
                            .col-md-6
                                select#prepTimeUnits.form-control.input-sm(ng-model='recipeData.cookTimeUnits', ng-options='choice as choice for choice in timeChoices', ng-change='fireChange()')
                                    option(value='')
            .form-group
                .row
                    .col-md-1
                        label(for='serves') Serves
                        input#serves.form-control.input-sm(type='text', ng-model='recipeData.serves', value='{{recipeData.serves}}')
            .row
                .col-md-6.no-padding
                    hr.hr-1-black
            div
                .row
                    .col-md-6.no-padding
                        label Instructions
            lk-row-groups(rows-data='recipeData.instructions')
            .row
                .col-md-6.no-padding
                    hr.hr-1-black
            div
                .row
                    .col-md-6.no-padding
                        label Ingredients
            lk-Ingredients(rows-data='recipeData.ingredients', choices='ingredientsUnits')
            .row
                .col-md-6.no-padding
                    hr.hr-1-black
            .form-group
                .row
                    .col-md-1
                        label(for='recipePhoto') Photo
                    .col-md-2
                        .btn.btn-microsoft(ng-click="uploadPictures(recipeData)") Upload Picture
                .row.margin-top-20
                    .col-md-4.thumbnail
                        img(ng-src='{{croppedImageURL}}', width='200px', height='200px')
            .form-group
                .row
                    .col-md-1
                        .btn.btn-default(ng-click="save(recipeData)") Submit
                    .col-md-1
                        .btn.btn-default(ng-click="clear(recipeData)") Clear





