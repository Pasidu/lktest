div(ng-controller='recipeDetailCtrl')
    .container
        .row.margin-top-20
            .col-md-4.col-md-offset-1
                .thumbnail()
                    img(src='{{getImagePath(recipeData.imageName)}}', width='300px')
            .col-md-6
                .container
                    .row.curve-borders.backgroud-grey
                        .col-md-9.padding-left-right-15.top-bottom-padding-15.vertical-after
                            h4.no-margin-ver {{recipeData.title}}
                        .col-md-3.padding-top-5
                            | Ready in {{recipeData.readyIn}}
                    .row.margin-top-bottom-5
                        .col-md-12
                    .row.curve-borders.backgroud-row-green
                        .col-md-3.padding-left-right-15.top-bottom-padding-15.vertical-after
                            .row.text-center
                                | Prep Time
                            .row.text-center
                                | {{recipeData.prepTime}} {{recipeData.prepTimeUnits}}
                        .col-md-3.padding-left-right-15.top-bottom-padding-15.vertical-after
                            .row.text-center
                                | Cook Time
                            .row.text-center
                                | {{recipeData.cookTime}} {{recipeData.cookTimeUnits}}
                        .col-md-3.padding-left-right-15.top-bottom-padding-15.vertical-after
                            .row.text-center
                                | Serves
                            .row.text-center
                                | {{recipeData.serves}}
                        .col-md-3.padding-left-right-15.top-bottom-padding-15
                            .row.text-center
                                | Rating
                            .row.text-center
                                | 4
                    .row.margin-top-bottom-5
                        .col-md-12
                    .row.curve-borders.backgroud-row-green
                        .col-md-12.padding-top-5
                            p
                                {{recipeData.description}}
        .row.margin-top-bottom-5
                hr.hr-1-black
        .row
            .col-md-4.col-md-offset-1
                .container.curve-borders.backgroud-grey
                    .row
                        .col-md-12.padding-left-right-15.top-bottom-padding-15
                            h5.no-margin-ver Ingredients
                    .row
                        .col-md-6.col-xs-offset-1()
                            ol
                                em
                                    li.text-(ng-repeat='ingredient in recipeData.ingredients | filter:emptyOrNull')
                                        | {{ingredients.units}} {{ingredients.quantity}} {{ingredient.details}}
            .col-md-6
                .container.curve-borders.backgroud-grey
                    .row
                        .col-md-12.padding-left-right-15.top-bottom-padding-15
                            h5.no-margin-ver Instructions
                    .row
                        .col-md-6.col-xs-offset-1
                            ol
                                em
                                    li(ng-repeat='instruction in recipeData.instructions')
                                        | {{instruction.value}}
        .row.margin-top-bottom-5

